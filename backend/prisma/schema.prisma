// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" / "sqlite" depending on your setup
  url      = env("DATABASE_URL")
}

//
// Enums
//

enum Role {
  USER
  ADMIN
}

enum PlanTier {
  FREE
  PRO
  ENTERPRISE
}

enum AIDraftStatus {
  PENDING
  APPROVED
  REJECTED
}

//
// Models
//

model User {
  id                   String           @id @default(cuid())
  email                String           @unique
  passwordHash         String
  role                 Role             @default(USER)

  /// Current subscription plan for gating (used by requirePlan + Stripe webhooks)
  plan                 PlanTier         @default(FREE)

  /// Stripe wiring
  stripeCustomerId     String?          @unique
  stripeSubscriptionId String?

  /// Relations
  createdModules       Module[]         @relation("ModulesCreated")
  moduleOverrides      ModuleOverride[]
  aiModuleDrafts       AIModuleDraft[]  @relation("DraftsCreated")

  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
}

model Module {
  id            String    @id @default(cuid())
  key           String    @unique
  name          String

  description   String?
  category      String?
  icon          String?

  /// Minimum plan required to see/use this module
  minPlan       PlanTier  @default(FREE)

  enabled       Boolean   @default(true)

  /// JSON blob for module-specific default configuration
  defaultConfig Json?

  /// Creator (admin) â€“ optional
  createdBy     User?     @relation("ModulesCreated", fields: [createdById], references: [id])
  createdById   String?

  overrides     ModuleOverride[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ModuleOverride {
  id        String  @id @default(cuid())

  user      User    @relation(fields: [userId], references: [id])
  userId    String

  module    Module  @relation(fields: [moduleId], references: [id])
  moduleId  String

  /// If null, follow Module.enabled; if set, override
  enabled   Boolean?

  /// Per-user config override for this module
  config    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, moduleId])
}

model AIModuleDraft {
  id            String        @id @default(cuid())
  name          String
  description   String?
  minPlan       PlanTier      @default(FREE)
  status        AIDraftStatus @default(PENDING)

  /// Text diff of proposed Prisma changes (for review UI)
  schemaDiff    String?
  /// Text preview of proposed backend routes (for review UI)
  routesPreview String?
  /// Simple list of permission strings (e.g. ["requireAuth", "requirePlan(PRO)"])
  permissions   String[]

  /// Which admin triggered this draft
  createdBy     User?         @relation("DraftsCreated", fields: [createdById], references: [id])
  createdById   String?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

